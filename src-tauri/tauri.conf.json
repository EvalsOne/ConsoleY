{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ConsoleY",
  "version": "0.1.0",
  "identifier": "com.consoley-dev.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ConsoleY",
        "width": 1024,
        "height": 768,
        "resizable": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self' http://localhost:* 'unsafe-eval' 'unsafe-inline'; img-src 'self' http://localhost:* data: blob: 'unsafe-inline'; connect-src 'self' http://localhost:* ws://localhost:*; frame-src 'self' http://localhost:*",
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*"
    ]
  }
}